# ================================================================
# Bank Sultra - Absensi MSDM
# Environment Configuration Template
# ================================================================
# Copy file ini ke .env dan sesuaikan values

# ----------------------------------------------------------------
# Application
# ----------------------------------------------------------------
NODE_ENV=development
PORT=5000

# ----------------------------------------------------------------
# Timezone
# ----------------------------------------------------------------
TZ=Asia/Makassar

# ----------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------
DATABASE=development
CONFIG_ENC_KEY=your-secret-key-minimum-32-characters-change-this
DB_TIMEZONE=+08:00
DB_POOL_MAX=20
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
DB_POOL_EVICT=1000

# ----------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------
LOG_ROOT=logs
LOG_LEVEL=info
LOG_FILE_MAXSIZE=10m

# ----------------------------------------------------------------
# SignozZ Configuration
# ----------------------------------------------------------------
SIGNOZ_ENABLED=false
SIGNOZ_OTLP_ENDPOINT=http://localhost:4318
SIGNOZ_SERVICE_NAME=absensi-msdm
SIGNOZ_SERVICE_VERSION=1.0.0
SIGNOZ_ENVIRONMENT=development
SIGNOZ_SAMPLE_RATE=1.0
SIGNOZ_LOG_LEVEL=info